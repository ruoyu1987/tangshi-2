<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#DEB887">

        <ImageView
            android:id="@+id/registerActivity_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:paddingRight="45dp"
            android:text="注册"/>

    </LinearLayout>


    <EditText
        android:id="@+id/registerActivity_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:layout_marginTop="20dp"
        android:theme="@style/MyEditText"
        android:hint="请输入账号"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/registerActivity_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:theme="@style/MyEditText"
        android:hint="请输入密码"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/registerActivity_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:theme="@style/MyEditText"
        android:hint="请输入昵称"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <Button
            android:id="@+id/registerActivity_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#EEDFCC"
            android:text="取消"
            android:textColor="#666"
            android:textSize="16sp" />

        <Button
            android:id="@+id/registerActivity_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EEDFCC"
            android:text="注册"
            android:textColor="#666"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>